<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#88dddd"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

    <Button
        android:id="@+id/btnConnect"
        android:background="@drawable/red_button"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        style="@style/button_text"
        android:onClick="onclickconnect"/>

    <Button
        android:id="@+id/btnHistory"
        android:layout_below="@+id/btnConnect"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:onClick="onclickHistory" />

    <Button
        android:id="@+id/btnLocal"
        android:layout_below="@+id/btnHistory"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:onClick="onclickLocal" />

    <Button
        android:id="@+id/btnUbidots"
        android:layout_below="@+id/btnLocal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubidots"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:onClick="onclickUbidot"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnCSV"
        android:layout_below="@+id/btnSetTemp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export To CSV"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:visibility="invisible"
        android:onClick="onclickCSV"/>

    <Button
        android:id="@+id/btnSetTemp"
        android:layout_below="@+id/btnLocal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Temp"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:onClick="onclickSetTemp"/>

</RelativeLayout>
